#!/usr/bin/env bash
# This script manages its PID file, runs indefinitely, and handles SIGINT, SIGTERM, and SIGQUIT signals

PID_FILE="/var/run/myscript.pid"

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap cleanup_and_exit SIGQUIT

echo "$$" > "$PID_FILE"

while true; do
    echo "To infinity and beyond"
done
