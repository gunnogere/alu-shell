#!/usr/bin/env bash
# Bash script that reads /etc/passwd and displays user info in a formatted way
# Requirements:
# - Use while loop
# - Use IFS to parse colon-separated fields

while IFS=: read -r username password uid gid full_name home shell; do
    echo "The user $username is part of the $gid gang, lives in $home and rides $shell. USER ID's place is protected by the passcode $password, more info about the user here: $uid"
done < /etc/passwd
